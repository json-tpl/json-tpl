{
  "plugins": ["@typescript-eslint"],
  "extends": ["./rules/recommended", "./rules/import", "./rules/regexp", "./rules/typescript"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": false,
      "impliedStrict": true
    }
  },
  "env": {
    "es2021": true,
    "shared-node-browser": true
  },
  "overrides": [
    {
      "files": ["*.d.ts"],
      "rules": {
        "camelcase": "off",
        "@typescript-eslint/ban-types": "off"
      }
    },
    {
      "files": ["**/*.spec.ts"],
      "env": { "jest": true }
    },
    {
      "files": ["**/*.js"],
      "rules": {
        "@typescript-eslint/no-unsafe-assignment": "off",
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ]
}
